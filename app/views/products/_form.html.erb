<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @product %>
      <%= form_with(model: @product, class: "shadow p-3 mb-3 bg-body-info rounded", local: true) do |form| %>

        <div class="row mb-3">
          <%= form.label :name, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :name, class: "form-control shadow p-3 mb-3 bg-body-tertiary" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= form.label :description, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_area :description, class: "form-control shadow p-3 mb-3 bg-body-tertiary" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= form.label :price, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :price, class: "form-control shadow p-3 mb-3 bg-body-tertiary" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= form.label :weight, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :weight, class: "form-control shadow p-3 mb-3 bg-body-tertiary" %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="d-flex col-sm-2">
            <label for="photo_url" class="col-sm-2 col-form-label">Photo</label>
          </div>
          <div class="col-sm-10">
            <input class="col-sm-10 form-control shadow p-3 mb-3 bg-body-tertiary" type="file" id="photo_url">
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <p>
            <%= form.submit class: "btn btn-outline-info"%>
          </p>
        </div>
      <% end %>
    </div>
    <div class="mb-lg-5 text-center">
      <%= link_to 'Cancel and return to products linting', products_path, class: "text-center"%>
    </div>
  </div>
</div>
