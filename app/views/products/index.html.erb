<h1 class="text-center mt-4">Cakes</h1>
<div class="container">
  <div class="row row-cols-2 row-cols-md-3 g-4">
    <% @products.each do |product| %>
      <div class="row">
        <div class="col-8 mt-4">
          <div class="card h-100 text-center shadow p-3 mb-5  bg-white rounded">
            <div class="card-header">
            </div>

            <img src="assets/<%= product.photo_url %>" class="card-img-top" alt="bc">

            <div class="card-body">
              <h5 class="card-title"><%= link_to product.name, product_path(product), class: "text-dark" %></h5>
              <p class="card-text"><%= truncate(product.description, length: 100) %></p>
              <p class="card-text"><%= product.price %> $ </p>
              <p class="card-text"><%= product.weight %> kg </p>

              <a href="#" class="btn btn-success">Add</a>
              <!-- <a href="#" class="btn btn-danger">Delete</a> -->
            </div>
            <div class="card-footer text-body-secondary">
              <a href="#" class="btn btn-info">Customize cake</a>
            </div>
            <div class="card-footer text-body-secondary">
              <%="Get it tomorrow" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>