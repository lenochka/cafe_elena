<h1 class="text-center mt-4">Cakes</h1>
<div class="container">
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @products.each do |product| %>
      <div class="col">
          <div class="card h-100 text-center shadow p-3 mb-5  bg-white rounded">
            <div class="card-header">
            </div>

            <img src="../<%= product.photo_url %>" class="card-img-top" alt="bc">

            <div class="card-body">
              <h5 class="card-title"><%= link_to product.name, product_path(product), class: "text-dark" %></h5>
              <p class="card-text"><%= truncate(product.description, length: 100) %></p>
              <p class="card-text"><%= number_to_currency(product.price) %></p>
              <p class="card-text"><%= product.weight %> kg </p>
              <div class="d-grid gap-2 d-md-flex justify-content-center">
                <%= link_to "Edit", edit_product_path(product), class: "btn btn-outline-info" %>
                <%= button_to "Delete", product,
                  class: "btn btn-outline-danger",
                  method: :delete, data: {confirm: "Are you sure?"} %>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>