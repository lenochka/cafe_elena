<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-body-info rounded", local: true) do |form| %>
      <div class="row mb-3">
        <%= form.label :user_name, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :user_name, class: "form-control p-3 mb-3 bg-body-tertiary" %>
        </div>
      </div>
      <div class="row mb-3">
        <%= form.label :email_address, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :email_address, class: "form-control p-3 mb-3 bg-body-tertiary" %>
        </div>
      </div>
      <div class="row mb-3">
        <%= form.label :password, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :password, class: "form-control p-3 mb-3 bg-body-tertiary",
                              placeholder: 'Choose a password' %>
        </div>
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-center">
        <%= form.submit class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>