<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with( url: session_path, class: "shadow p-3 mb-3 bg-body-info rounded", local: true) do |form| %>
        <div class="row mb-3">
          <%= form.label :email_address, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.email_field :email_address, required: true,
                                autofocus: true, autocomplete: "username",
                                placeholder: "Enter your email address",
                                class: "form-control shadow p-3 mb-3 bg-body-tertiary" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= form.label :password, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.password_field :password, class: "form-control shadow p-3 mb-3 bg-body-tertiary",
                                    required: true, autocomplete: "current-password",
                                    placeholder: "Enter your password", maxlength: 72 %>

          </div>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-center">
          <%= form.submit "Sign in", class: "btn btn-success" %>
        </div>
        <%= link_to "Forgot password?", new_password_path %>
      <% end %>
    </div>
  </div>
</div>